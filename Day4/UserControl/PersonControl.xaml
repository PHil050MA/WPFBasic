<UserControl x:Class="WpfUserControlExam.PersonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUserControlExam"
             mc:Ignorable="d" 
             Width="150" Height="90">
    <Border BorderBrush="LightBlue" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="{Binding ID}" FontWeight="Bold" FontSize="16"/>
            <TextBlock Text="{Binding Name}" Margin="5,0"/>
            <TextBlock Text="{Binding Phone}" Margin="5,0"/>
            <TextBlock Text="{Binding Gender}" Margin="5,0"/>
        </StackPanel>
    </Border>
</UserControl>