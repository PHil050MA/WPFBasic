<Window x:Class="JobManagerTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JobManagerTimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="530" Width="800">
    <StackPanel>
        <StackPanel Orientation=" Horizontal">
            <TextBlock Width="150" Padding="20" FontSize="40" VerticalAlignment="Center">Job 1</TextBlock>
            <local:StopwatchControl/>
        </StackPanel>
        <Rectangle Fill="Black" Width="800" Height="1"/>

        <StackPanel Orientation=" Horizontal">
            <TextBlock Width="150" Padding="20" FontSize="40" VerticalAlignment="Center">Job 2</TextBlock>
            <local:StopwatchControl/>
        </StackPanel>
        <Rectangle Fill="Black" Width="800" Height="1"/>

        <StackPanel Orientation=" Horizontal">
            <TextBlock Width="150" Padding="20" FontSize="40" VerticalAlignment="Center">Job 3</TextBlock>
            <local:StopwatchControl/>
        </StackPanel>
        <Rectangle Fill="Black" Width="80" Height="1"/>
    </StackPanel>
</Window>
