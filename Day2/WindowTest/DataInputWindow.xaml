<Window x:Class="WpfDay2.DataInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDay2"
        mc:Ignorable="d"
        Title="DataInputWindow" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel>
                <TextBox Name="myTextName"></TextBox>
                <TextBox Name="myTextPhone"></TextBox>
                <TextBox Name="myAge"></TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Button Height="30" Width="80" Content="확인" Click="Button_Click"></Button>
        </Grid>

    </Grid>
</Window>
