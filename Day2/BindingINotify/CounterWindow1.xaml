<Window x:Class="WpfDay2Binding.CounterWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDay2Binding"
        mc:Ignorable="d"
        Title="CounterWindow1" Height="450" Width="800">
    <StackPanel>
        <Button  Height="70" x:Name="myButton" Content="Click me" Click="myButton_Click" />
        <Label FontSize="30" Height="100" HorizontalAlignment="Center" x:Name="counterLabel" Content="{Binding Counter}"/>
    </StackPanel>
</Window>
